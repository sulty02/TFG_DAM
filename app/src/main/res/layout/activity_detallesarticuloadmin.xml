<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoapp"
    tools:context=".ADMIN.DetallesArticuloADMIN">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detallesNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Nombre"
                android:textColor="@color/lavanda"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/detallesImagen"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/uploading" />

            <TextView
                android:id="@+id/detallesEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/archivo_blackk"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:text="Estado"
                android:textColor="@color/lavanda"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detallesDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/archivo"
                android:padding="20dp"
                android:text="Description"
                android:textColor="@color/lavanda"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detallesPrecio"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/archivo_blackk"
                android:padding="20dp"
                android:text="Precio"
                android:textColor="@color/lavanda"
                android:textSize="34sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:layout_marginRight="5dp"
                app:fab_colorPressed="@color/lavanda"
                app:fab_colorNormal="@color/lavanda"
                android:src="@drawable/baseline_edit_24"
                android:backgroundTint="@color/lavanda"
                android:tint="@color/white"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_borrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                app:fab_colorPressed="@color/lavanda"
                app:fab_colorNormal="@color/lavanda"
                android:src="@drawable/baseline_delete_24"
                android:backgroundTint="@color/lavanda"
                android:tint="@color/white"/>

        </LinearLayout>
    </ScrollView>



