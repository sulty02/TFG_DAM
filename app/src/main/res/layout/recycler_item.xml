<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:background="#77ffffff"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#77ffffff"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/recImagen"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploading"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/recNombre"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImagen"
            android:fontFamily="sans-serif-smallcaps"
            android:maxLines="1"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recEstado"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/recNombre"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImagen"
            android:fontFamily="@font/archivo_semibold"
            android:text="Estado"
            android:textColor="@color/lavanda"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recDescripcion"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/recEstado"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImagen"
            android:fontFamily="@font/archivo"
            android:text="DescripciÃ³n"
            android:textColor="@color/lavanda"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recPrecio"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/recDescripcion"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImagen"
            android:fontFamily="@font/archivo_black"
            android:text="Precio"

            android:textColor="@color/lavanda"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>